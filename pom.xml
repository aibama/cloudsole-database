        </repository>
        <repository>
            <id>webjars</id>
            <url>http://webjars.github.com/m2</url>
        </repository>
    </repositories>

    <dependencies>
    	
    	 <dependency>
			<groupId>com.googlecode.linkedin-j</groupId>
